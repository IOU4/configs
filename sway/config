## border
default_border pixel 1
#smart_borders on

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
bindsym XF86AudioLowerVolume exec amixer set Master 5%-
bindsym XF86AudioMute exec amixer set Master 1+ toggle
bindsym XF86AudioMicMute exec amixer set Capture toggle

#set brighness keys
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10


bindsym $mod+c exec $browser
bindsym $mod+Return exec $term
bindsym $mod+d exec $menu
bindsym $mod+n exec $term -e $files


# gaps inner 4
# gaps top 4

# client-borders 
client.focused $secondary $secondary $secondary 
client.unfocused $primary $primary $primary 
client.focused_inactive $primary $primary $primary 

# assigns
assign [class = "Chromium"] $ws2
assign [class = "Firefox"] $ws2
assign [class = "Rhytmbox"] $ws3
for_window [class = "Spotify"] move to workspace number $ws3
for_window [class = "scrcpy"] floating enabled
for_window [class = "XEyes"] floating enabled
for_window [app_id = "qemu"] floating enabled

# me
exec nm-applet --indicator
exec dunst
exec export LC_ALL=en_US.UTF-8 && export LANG=en_US.UTF-8

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null/ && dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK


